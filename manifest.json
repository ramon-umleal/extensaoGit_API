{
  "manifest_version": 2,
  "name": "Consultas externas do Sapiens",
  "version": "0.0",
  "description": "Consultas externas do Sapiens",
  "icons": {
    "128": "img/icon128.png",
    "19": "img/icon19.png",
    "48": "img/icon48.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon128.png",
      "19": "img/icon19.png",
      "48": "img/icon48.png"
    },
    "default_title": "Consultas externas do Sapiens",
    "default_popup": "src/pages/index.html"
  },
  "content_scripts": [
    { 
      "run_at": "document_idle",
      "js": ["src/components/mftools.js",
        "src/components/buttonConsulta.js",
        "src/main.js"],


      "matches": [
        "https://sapiens.agu.gov.br/*"
      ]
    }
  ]
}